<UserControl
    x:Class="FinBox.Controls.LazyLoadedImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinBox.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <Canvas>
        <Image
            Width="{x:Bind ViewModel.Width, Mode=OneWay}"
            Height="{x:Bind ViewModel.Height, Mode=OneWay}"
            Stretch="UniformToFill"
            Source="{x:Bind ViewModel.BlurHashImageSource, Mode=OneWay}"
            Visibility="{x:Bind ViewModel.EnableBlurHash, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
            Canvas.ZIndex="0" />
        <Image
            Name="Image"
            Width="{x:Bind ViewModel.Width, Mode=OneWay}"
            Height="{x:Bind ViewModel.Height, Mode=OneWay}"
            Canvas.ZIndex="1"
            Opacity="0"
            ImageOpened="ImageOpened">
            <Image.Source>
                <BitmapImage
                    UriSource="{x:Bind ViewModel.ImageUri, Mode=OneWay}"
                    CreateOptions="IgnoreImageCache" />
            </Image.Source>
        </Image>
    </Canvas>
    <UserControl.Resources>
        <Storyboard x:Name="ImageFadeIn"
                    AutoReverse="False"
                    RepeatBehavior="1x">
            <DoubleAnimation Storyboard.TargetName="Image"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>
    </UserControl.Resources>
</UserControl>
