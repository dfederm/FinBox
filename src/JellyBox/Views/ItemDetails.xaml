<Page
    x:Class="JellyBox.Views.ItemDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Jellyfin.Sdk.Generated.Models"
    xmlns:local="using:JellyBox.Views"
    xmlns:ViewModels="using:JellyBox.ViewModels"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:Behaviors="using:JellyBox.Behaviors"
    xmlns:uc="using:JellyBox.Controls"
    xmlns:m="using:JellyBox.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource Color10}">
            <Image 
                Source="/Assets/OnBoardingLogo.png" 
                Stretch="Uniform" 
                HorizontalAlignment="Left" 
                Height="28"
                Margin="28 0 0 0" />
        </Grid>
        <Grid Grid.Row="1"
              Padding="0 40 0 0">
            <Grid.Background>
                <ImageBrush
                    AlignmentX="Center"
                    AlignmentY="Top"
                    Opacity="0.14">
                    <ImageBrush.ImageSource>
                        <BitmapImage UriSource="{x:Bind ViewModel.BackdropImageUri, Mode=OneWay, FallbackValue=null}" />
                    </ImageBrush.ImageSource>
                </ImageBrush>
            </Grid.Background>
            <ScrollViewer>
                <Grid>
                    <uc:LazyLoadedImage
                        Grid.Row="1"
                        Item="{x:Bind ViewModel.Item, Mode=OneWay}"
                        ImageType="Primary"
                        Width="300"
                        Height="450"
                        VerticalAlignment="Top"
                        Margin="50 200 50 0"
                        Canvas.ZIndex="200"
                        HorizontalAlignment="Left" />
                    <StackPanel
                        Grid.Row="1"
                        Orientation="Vertical"
                        Canvas.ZIndex="100">
                        <uc:LazyLoadedImage
                            Item="{x:Bind ViewModel.Item, Mode=OneWay}"
                            ImageType="Logo"
                            EnableBlurHash="False"
                            Width="300"
                            Height="175"
                            Margin="0 50 400 50"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                        <Grid
                            Background="#CC202020"
                            Padding="400 0 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                Orientation="Vertical">
                                <TextBlock
                                    Text="{x:Bind ViewModel.Name, Mode=OneWay}"
                                    FontWeight="Bold"
                                    FontSize="36" />
                                <ListView
                                    ItemsSource="{x:Bind ViewModel.MediaInfo, Mode=OneWay}"
                                    SelectionMode="None">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="IsTabStop" Value="False"/>
                                            <Setter Property="Padding" Value="0 0 20 0" />
                                            <Setter Property="MinWidth" Value="0" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsStackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="ViewModels:MediaInfoItem">
                                            <TextBlock
                                                Text="{x:Bind Text}" />
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                Orientation="Horizontal">
                                <Button 
                                    Margin="0 8 0 8"
                                    Click="{x:Bind ViewModel.Play}">
                                    <Interactivity:Interaction.Behaviors>
                                        <Behaviors:FocusOnLoadBehavior />
                                    </Interactivity:Interaction.Behaviors>
                                    <SymbolIcon Symbol="Play" />
                                </Button>
                                <Button
                                    Margin="0 8 0 8"
                                    Click="{x:Bind ViewModel.PlayTrailer}">
                                    <SymbolIcon Symbol="SlideShow" />
                                </Button>
                                <Button
                                    Margin="0 8 0 8"
                                    Click="{x:Bind ViewModel.TogglePlayed}">
                                    <SymbolIcon
                                        Symbol="Accept"
                                        Foreground="{x:Bind ViewModel.PlayStateBrush, Mode=OneWay}" />
                                </Button>
                                <Button
                                    Margin="0 8 0 8"
                                    Click="{x:Bind ViewModel.ToggleFavorite}">
                                    <SymbolIcon
                                        Symbol="Favorite"
                                        Foreground="{x:Bind ViewModel.FavoriteBrush, Mode=OneWay}" />
                                </Button>
                                <!-- TODO: More commands -->
                                <Button
                                    Margin="0 8 0 8">
                                    <SymbolIcon Symbol="More" />
                                </Button>
                            </StackPanel>
                        </Grid>
                        <StackPanel
                            Orientation="Vertical"
                            Background="#101010"
                            Padding="400 20 0 0">
                            <Grid
                                Visibility="{x:Bind ViewModel.SourceContainers, Mode=OneWay, Converter={StaticResource VisibleIfNotNullConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition Width="550" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Text="Version"
                                    Grid.Row="0"
                                    Grid.Column="0" />
                                <ComboBox
                                    ItemsSource="{x:Bind ViewModel.SourceContainers, Mode=OneWay}"
                                    SelectedItem="{x:Bind ViewModel.SelectedSourceContainer, Mode=TwoWay}"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Width="550">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="ViewModels:MediaSourceInfoWrapper">
                                            <TextBlock Text="{x:Bind Value.Name}" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock
                                    Text="Video"
                                    Grid.Row="1"
                                    Grid.Column="0" />
                                <ComboBox
                                    ItemsSource="{x:Bind ViewModel.VideoStreams, Mode=OneWay}"
                                    SelectedItem="{x:Bind ViewModel.SelectedVideoStream, Mode=TwoWay}"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="550">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="ViewModels:MediaStreamOption">
                                            <TextBlock Text="{x:Bind DisplayText }" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock
                                    Text="Audio"
                                    Grid.Row="2"
                                    Grid.Column="0" />
                                <ComboBox
                                    ItemsSource="{x:Bind ViewModel.AudioStreams, Mode=OneWay}"
                                    SelectedItem="{x:Bind ViewModel.SelectedAudioStream, Mode=TwoWay}"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Width="550">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="ViewModels:MediaStreamOption">
                                            <TextBlock Text="{x:Bind DisplayText }" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock
                                    Text="Subtitles"
                                    Grid.Row="3"
                                    Grid.Column="0" />
                                <ComboBox
                                    ItemsSource="{x:Bind ViewModel.SubtitleStreams, Mode=OneWay}"
                                    SelectedItem="{x:Bind ViewModel.SelectedSubtitleStream, Mode=TwoWay}"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Width="550">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate x:DataType="ViewModels:MediaStreamOption">
                                            <TextBlock Text="{x:Bind DisplayText }" />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>
                            <TextBlock
                                Text="{x:Bind ViewModel.TagLine, Mode=OneWay}"
                                TextWrapping="WrapWholeWords"
                                FontSize="{StaticResource FontL}"
                                Margin="0 20 0 20" />
                            <TextBlock
                                Text="{x:Bind ViewModel.Overview, Mode=OneWay}"
                                TextWrapping="WrapWholeWords"
                                Margin="0 10 0 0" />
                            <!-- TODO: Make into links? -->
                            <TextBlock
                                Text="{x:Bind ViewModel.Tags, Mode=OneWay}"
                                TextWrapping="WrapWholeWords"
                                Margin="0 25 0 0"/>

                            <ItemsControl ItemsSource="{x:Bind ViewModel.Sections, Mode=OneWay}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="m:Section">
                                        <StackPanel Visibility="{x:Bind Items, Converter={StaticResource EmptyCollectionToVisibilityConverter}}">
                                            <TextBlock
                                                Margin="20,10,0,5"
                                                HorizontalAlignment="Left"
                                                FontSize="{StaticResource FontL}"
                                                Foreground="White"
                                                Text="{x:Bind Name}" />
                                            <ListView
                                                Margin="8,0,20,10"
                                                IsItemClickEnabled="True"
                                                ItemsSource="{x:Bind Items}"
                                                ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                                ScrollViewer.HorizontalScrollMode="Enabled"
                                                ScrollViewer.VerticalScrollMode="Disabled"
                                                SelectionMode="None">
                                                <Interactivity:Interaction.Behaviors>
                                                    <Behaviors:ListViewBaseCommandBehavior Command="{x:Bind Path=NavigateToItemCommand}" />
                                                </Interactivity:Interaction.Behaviors>
                                                <ListView.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ListView.ItemsPanel>
                                                <ListView.ItemTemplate>
                                                    <DataTemplate x:DataType="models:BaseItemDto">
                                                        <!-- TODO: Sections can specify different card shape -->
                                                        <uc:Card
                                                            Item="{x:Bind}"
                                                            PreferredImageType="Thumb"
                                                            Shape="Backdrop" />
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
